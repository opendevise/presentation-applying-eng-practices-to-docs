.bespoke-slide
  &.title
    background-color $c-black-bis
    padding 0 4rem
    h1
      color $text-invert
      font-size 5.5rem
      font-weight 600
      line-height 1.6
      text-align center
      //text-shadow 1px 1px 5px rgba(0, 0, 0, .05)
    footer
      display none

  &.concept
    background-color #dbdbdb
    h2
      font-size 10rem
      margin 0
    p
      font-size 15rem
      margin 0

  &.statement
    background-color $c-black-bis
    align-items flex-start
    justify-content flex-end
    h2
      margin 0 0 sw(5) sw(5)
      border-left 1rem solid #fff
      padding-left 0.75rem
      line-height 1
      //font-size 6rem
      //font-size 5.25rem
      font-size 5rem
      text-transform uppercase
    .line
      max-width fit-content
      padding 0 0.75rem 0 0.25rem
      background-color #fff
      color $c-black-bis
      & + .line
        margin-top 0.75rem

  &.shout
    text-transform uppercase
    h2
      //color $c-gray
      color #828282
      width sw(50)
      line-height 0.8
    .line.prominence-1
      color $c-prm

  &.tweet
    background-color $c-black-bis

  &.practices
    ul
      display flex
      flex-wrap wrap
      flex-direction column
      padding 0
      margin 0
      width 100%
      height 100%
    li
      font-size 3rem
      text-transform uppercase
      display flex
      width 50%
      height 25%
      align-items center
      justify-content center
      line-height 1.15
      font-weight 600
      text-align center
      overflow hidden
      letter-spacing -0.025em
      padding 0 2em
      color $c-white
      background-color $c-prm
      &:nth-child(2n), &:nth-child(2n + 5)
        background-color $c-bis
      &:nth-child(2n + 6)
        background-color $c-prm

  &.ci-build-script
    background-color $c-black
    align-items flex-start
    justify-content flex-end
    p
      color $c-prm
      text-transform uppercase
      margin 0 0 sw(5) sw(10)
      font-size 3.5rem
      line-height 1.15
      font-weight 500
      strong
        color $c-white
        font-weight 500
        letter-spacing 0.24em

  &.code
    background $c-black-bis
    flex-direction row
    pre
      flex-grow 1
      font-size 2.25rem
      //background #f7f7f7
      background linear-gradient(to bottom, #fff 0%, #f7f7f7 100%)
      width 100%
      padding 1.25em 1em
      margin 0 1em
      border 0.3333em solid #070707
      border-radius 1em
      box-shadow 0px 2px 0.5em #070707
      overflow hidden
    &.dense
      pre
        font-size 1.75rem
    figcaption
      color #f7f7f7
      font-size 1.75rem
      text-align center
      font-weight 300
    figure.listing
      flex-grow 1
      margin 0 2.25rem
      pre
        margin 0

  &.challenge
    h2
      text-align right

  &.broken-windows
    h2
      font-size 6rem
      padding 0.25em
      color $c-white
      background-color hsla(200, 96%, 34%, 0.75)

  &.broken-windows-takeaway
    figure
      position absolute
      top 10rem
      right 14rem
      width sw(25)

  &.collaboration-is-unruly
    perspective 450px
    h2
      font-size 6rem
      transform translateZ(-200px) rotateY(-60deg) rotateX(-2deg) rotateZ(6deg)

  &.versions-are-hard
    justify-content flex-start
    h2
      font-size 6rem
      color $c-white
      text-shadow 5px 7px 2px $c-black-bis
      position relative
      left 3vw
      top 15vh

  &.too-much-to-maintain
    align-items flex-end
    justify-content flex-start
    h2
      font-size 9.75rem
      color $c-white
      font-weight 300
      margin 2rem 3.5rem 0 0
      text-shadow -5px 1px 5px $c-black-bis

  &.publishing-is-strenuous
    align-items flex-end
    justify-content flex-end
    h2
      font-size 6.5rem
      font-weight 700
      color hsl(215, 10%, 98%)
      transform rotate(-53deg)
      margin 0 1rem 16.75rem 0
      text-shadow -1px 1px 0px hsl(215, 10%, 75%), -2px 1px 0px hsl(215, 10%, 74%), -3px 1px 0px hsl(215, 10%, 69%), -4px 1px 0px hsl(215, 10%, 69%), -5px 1px 0px hsl(215, 10%, 63%)

  &.topic
    color $c-white
    background-color $c-prm
 
  &.subtopic
    color $c-white
    background-color $c-ter

  &.topic, &.subtopic
    h2
      font-size 5rem
      text-transform uppercase

  &.teach-them-git
    h2
      position absolute
      left sw(5)
      bottom sw(5)
      //background #a1302e
      //background $c-bis
      background-color #0286c2
      color #fff
      border-radius 0.5em
      padding .25em .5em
      font-weight 600
      box-shadow 10px 10px 0px rgb(230, 231, 231)
      //box-shadow 10px 10px 0px $c-gray-lighter
      font-size 3.5rem
    figure
      align-self flex-end
      width 50%
      margin-right sw(5)
    img
      max-width 100%

  &.subject.textlint
    background-color #dbdbdb

  &.credits
    h2
      font-size 4rem
      line-height 1.25
    ul
      font-size 1.5rem
